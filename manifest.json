{
  "manifest_version": 3,
  "name": "Chext - Element Logger",
  "version": "1.0.0",
  "description": "Captures clicked element text and displays in side panel",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Chext Logger - Click to toggle",
    "default_icon": {
      "16": "icon16_enabled.png",
      "48": "icon48_enabled.png",
      "128": "icon128_enabled.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
